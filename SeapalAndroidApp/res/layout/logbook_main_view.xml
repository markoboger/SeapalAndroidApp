<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal"
    android:id="@+id/logbook_main_view"
    android:baselineAligned="false">
    <fragment
        android:name="de.htwg.seapal.aview.gui.fragment.BoatListFragment"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/boat_list_fragment"

        />

    <fragment
        android:name="de.htwg.seapal.aview.gui.fragment.LogbookSlideFragment"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:id="@+id/logbook_slide_fragment"
        />
</LinearLayout>